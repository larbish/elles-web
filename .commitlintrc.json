{
  "rules": {
    "scope-empty": [2, "never"],
    "type-enum": [2, "always", ["feat", "fix", "docs", "refactor", "test", "revert", "quality", "chore", "init"]],
    "subject-case": [2, "always", "sentence-case"]
  },
  "parserPreset": {
    "parserOpts": {
      "headerPattern": "(\\w*)\\((\\w*)\\):\\s(.*)\\s([A-Z]{3}-[0-9]+)",
      "headerCorrespondence": ["type", "scope", "subject", "ticket"]
    }
  }
}
